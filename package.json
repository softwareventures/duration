    "@softwareventures/tslint-rules": "1.0.0",
    "ava": "4.3.3",
    "cz-conventional-changelog": "3.3.0",
    "semantic-release": "19.0.3",
    "ts-node": "10.9.1",
    "tslint": "6.1.3",
    "typescript": "4.8.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "release": {
